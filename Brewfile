# =============================================================================
# Homebrew Bundle
# Install: brew bundle --file=~/.config/Brewfile
# =============================================================================

# Taps
tap "homebrew/cask-fonts"

# -----------------------------------------------------------------------------
# CLI Tools
# -----------------------------------------------------------------------------

brew "starship"           # Cross-shell prompt
brew "fzf"                # Fuzzy finder
brew "bat"                # Cat with syntax highlighting
brew "tmux"               # Terminal multiplexer
brew "neofetch"           # System info display
brew "git"                # Version control
brew "git-lfs"            # Git Large File Storage
brew "mise"               # Runtime version manager (ruby, node, etc.)

# Shell enhancements
brew "zsh-autosuggestions"
brew "zsh-syntax-highlighting"

# -----------------------------------------------------------------------------
# Development
# -----------------------------------------------------------------------------

brew "nvm"                # Node version manager
brew "postgresql@17"      # Database

# -----------------------------------------------------------------------------
# Casks (GUI Applications)
# -----------------------------------------------------------------------------

cask "alacritty"          # Terminal emulator

# -----------------------------------------------------------------------------
# Fonts (Nerd Fonts for icons in terminal/prompt)
# -----------------------------------------------------------------------------

cask "font-fira-code-nerd-font"
